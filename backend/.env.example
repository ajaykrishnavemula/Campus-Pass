# Server Configuration
NODE_ENV=development
PORT=3000
HOST=127.0.0.1

# Database
DATABASE_URL=mongodb://localhost:27017/campuspass

# API Configuration
API_PREFIX=/api/v1

# JWT Configuration (REQUIRED - Generate secure random strings)
# You can generate secure secrets using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES=30d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this-in-production-min-32-chars
JWT_REFRESH_EXPIRES=90d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15m

# Logging
LOG_LEVEL=info